{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WSL Debug C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.out",   // compiled binary
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
